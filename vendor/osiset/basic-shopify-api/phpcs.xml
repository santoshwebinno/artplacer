<?xml version="1.0"?>
<ruleset name="Laravel-Shopify Ruleset" namespace="Osiset\ShopifyApp">
  <description>PSR2 CS for BasicShopifyAPI</description>

  <rule ref="PSR2" />

  <exclude-pattern>/vendor/*</exclude-pattern>
  <exclude-pattern>/build/*</exclude-pattern>
